<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shick.stepcounter.DB_Activity"
    android:background="@android:color/white">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:layout_alignParentTop="true"
        android:id="@+id/relativeLayout1"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/licheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Total mileage：18.62km"
            android:typeface = "serif"
            android:textSize="25sp"
            android:textColor="@color/accent_material_light" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/relativeLayout2"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/cishu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Total times：4s"
            android:typeface = "serif"
            android:textSize="20sp"
            android:textColor="@color/accent_material_light"
            android:layout_marginLeft="16dp" />
        <TextView
            android:id="@+id/shichang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Duration：02:05:25"
            android:typeface = "serif"
            android:textSize="20sp"
            android:textColor="@color/accent_material_light"
            android:layout_marginRight="16dp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:id="@+id/line"
        android:layout_below="@+id/relativeLayout2"
        android:background="@color/background_material_dark" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/relativeLayout3"
        android:layout_below="@+id/line">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "跑步时间"
            android:typeface = "serif"
            android:paddingTop="5dp"
            android:textColor="@android:color/holo_purple"
            android:layout_marginLeft="85dp"
            android:layout_marginRight="60dp"
            android:id="@+id/textView"
            android:layout_marginStart="91dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "跑步时长"
            android:typeface = "serif"
            android:paddingTop="5dp"
            android:textColor="@android:color/holo_purple"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/textView"
            android:layout_marginLeft="40dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "跑步步数"
            android:typeface = "serif"
            android:paddingTop="5dp"
            android:textColor="@android:color/holo_purple"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="36dp"
            android:layout_marginEnd="36dp" />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:id="@+id/line2"
        android:layout_below="@+id/relativeLayout3"
        android:background="@color/background_material_dark" />
    <ListView
        android:divider="#00000000"
        android:dividerHeight="0dip"
        android:id="@+id/runlist"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/line2"
        >

    </ListView>
</RelativeLayout>